<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackground">

    <RelativeLayout
        android:id="@+id/rl_home_fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_home_bottom"/>

    <LinearLayout
        android:id="@+id/ll_home_bottom"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_home_information"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <Button
                style="@style/HomeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/bt_home_map"
                android:onClick="onTabClicked"
                android:paddingBottom="2dp"
                android:paddingTop="7dp"
                android:text="@string/bt_home_map"
                android:textSize="14sp"
                android:id="@+id/bt_home_information" />
            <TextView
                android:id="@+id/tv_home_information_red"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:visibility="invisible"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_home_find"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            >

            <Button
                style="@style/HomeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/bt_home_buy"
                android:onClick="onTabClicked"
                android:paddingBottom="2dp"
                android:paddingTop="7dp"
                android:textSize="14sp"
                android:text="@string/bt_home_buy"
                android:id="@+id/bt_home_find" />
            <TextView
                android:id="@+id/tv_home_find_red"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:visibility="invisible"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_home_chat"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <Button
                style="@style/HomeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/bt_home_sale"
                android:onClick="onTabClicked"
                android:paddingBottom="2dp"
                android:paddingTop="7dp"
                android:textSize="14sp"
                android:text="@string/bt_home_sale"
                android:id="@+id/bt_home_chat"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <TextView
                android:id="@+id/tv_home_chat_red"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:visibility="invisible"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_home_me"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <Button
                style="@style/HomeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/bt_home_me"
                android:onClick="onTabClicked"
                android:paddingBottom="2dp"
                android:paddingTop="7dp"
                android:textSize="14sp"
                android:text="@string/bt_home_me"
                android:id="@+id/bt_home_me"
                 />
            <TextView
                android:id="@+id/tv_home_me_red"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:visibility="invisible"
                />
        </RelativeLayout>
    </LinearLayout>>


</RelativeLayout>
