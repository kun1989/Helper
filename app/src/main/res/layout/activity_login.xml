<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@color/colorTheme"
        android:gravity="center"
        android:text="@string/tv_login_title"
        android:textSize="20sp"
        android:textColor="@color/colorTextWhite"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/colorMainBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginTop="36.67dip"
                android:orientation="horizontal"
                android:background="@color/colorTextWhite">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_login_areaCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="@string/tv_login_areaCode"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_login_areaCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dip"
                        android:src="@mipmap/ic_down_black"
                        android:contentDescription="@string/app_name"/>

                    <View
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dip"
                        android:layout_marginLeft="14dip"
                        android:layout_marginTop="14dip"
                        android:background="@color/colorLine"
                         />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_login_phone"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null"
                    android:inputType="phone"
                    android:hint="@string/tv_login_phone_hint">
                </EditText>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/colorLine"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:orientation="horizontal"
                android:background="@color/colorTextWhite">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:text="@string/tv_login_password"
                        android:textSize="18sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_login_password"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:hint="@string/tv_login_password_hint"/>

                <ImageView
                    android:id="@+id/iv_login_password_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_delete"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/bt_login_submit"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="54dip"
                android:text="@string/bt_login"
                android:textSize="22sp"
                android:textColor="@color/colorTextWhite"
                android:background="@drawable/bt_login_click"/>

            <TextView
                android:id="@+id/tv_login_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:layout_marginTop="52dip"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/tv_login_forget_password"
                android:textColor="@color/colorTheme"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dip"
                android:layout_marginBottom="15dip"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/tv_login_ask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_login_register_ask" />

                <TextView
                    android:id="@+id/tv_login_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/tv_login_ask"
                    android:text="@string/tv_login_register"
                    android:textColor="@color/colorTheme"
                    android:textSize="14sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>