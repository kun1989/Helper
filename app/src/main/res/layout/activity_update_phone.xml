<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="22sp"
            android:text="@string/tv_update_phone_title"
            android:textColor="@color/colorTextWhite"
            android:background="@color/colorTheme"/>

        <RelativeLayout
            android:id="@+id/rl_update_phone_back"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_back_white_left" />
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainBackground"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:layout_marginTop="25dip"
                android:orientation="horizontal"
                android:background="@color/colorTextWhite">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:text="@string/tv_update_phone_country_code"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dip"
                        android:src="@mipmap/ic_down_black"
                        android:contentDescription="@string/app_name"/>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dip"
                        android:layout_marginTop="14dip"
                        android:layout_marginLeft="8dip"
                        android:background="@color/colorCodeLine"
                        />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_update_phone"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null"
                    android:inputType="phone"
                    android:paddingLeft="35dip"
                    android:hint="@string/et_update_phone_hint">
                </EditText>
                <TextView
                    android:id="@+id/tv_update_phone_verification_get"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:text="@string/tv_update_phone_verification_obtain"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="13sp"
                    android:layout_margin="10dp"
                    android:background="@drawable/bt_login_click"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/colorTextWhite">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dip"
                    android:text="@string/tv_update_phone_verification"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_update_phone_verification"
                    android:layout_width="0dip"
                    android:layout_weight="1.0"
                    android:layout_height="match_parent"
                    android:hint="@string/et_update_phone_verification_hint"
                    android:background="@null"
                    android:inputType="phone"
                    android:paddingLeft="15dip">

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:background="@color/colorTextWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:paddingLeft="15dip"
                    android:text="@string/tv_update_phone_phone"/>

                <EditText
                    android:id="@+id/et_update_phone_phone"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:paddingLeft="15dip"
                    android:hint="@string/et_update_phone_phone_hint"
                    android:background="@null"
                    android:inputType="textPassword"/>

            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:background="@color/colorTextWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:paddingLeft="15dip"
                    android:text="@string/tv_update_phone_phone_confirm"/>

                <EditText
                    android:id="@+id/et_update_phone_phone_confirm"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:paddingLeft="15dip"
                    android:hint="@string/et_update_phone_phone_confirm_hint"
                    android:background="@null"
                    android:inputType="textPassword"/>
            </LinearLayout>

            <Button
                android:id="@+id/bt_update_phone_submit"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="50dip"
                android:layout_marginBottom="20dip"
                android:background="@drawable/bt_login_click"
                android:text="@string/bt_update_phone_submit"
                android:textColor="@color/colorTextWhite"
                android:textSize="22sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>