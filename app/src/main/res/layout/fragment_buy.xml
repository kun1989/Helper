<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="22sp"
            android:text="@string/tv_fragment_buy_title"
            android:textColor="@color/colorTextWhite"
            android:background="@color/colorTheme"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:src="@mipmap/ic_un_authorized"
        android:scaleType="centerInside"/>

    <Button
        android:id="@+id/bt_fragment_buy_authorized"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="50dip"
        android:layout_marginBottom="30dip"
        android:background="@drawable/bt_login_click"
        android:text="@string/bt_fragment_buy_authorized"
        android:textColor="@color/colorTextWhite"
        android:textSize="22sp" />

</LinearLayout>