<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="17dp"
            android:text="@string/tv_message_title"
            android:textColor="@color/colorTextWhite"
            android:background="@color/colorTheme"/>

        <RelativeLayout
            android:id="@+id/rl_message_back"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_back_white_left" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_message_system"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:text="系统消息(临时跳转)"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_message_user"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:text="用户消息(临时跳转)"
        android:gravity="center"/>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/lv_message"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>