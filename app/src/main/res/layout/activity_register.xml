<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="22sp"
            android:text="@string/tv_register_title"
            android:textColor="@color/colorTextWhite"
            android:background="@color/colorTheme"/>

        <RelativeLayout
            android:id="@+id/rl_register_back"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_back_white_left" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainBackground"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_register_head"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dip"
                fresco:roundedCornerRadius="50dp"
                fresco:roundWithOverlayColor="@color/colorMainBackground"
                fresco:roundingBorderWidth="1dp"
                fresco:roundingBorderColor="@color/colorTextGray"
                fresco:placeholderImage="@mipmap/ic_take_picture"
                fresco:placeholderImageScaleType="center"/>

            <RadioGroup
                android:id="@+id/radioGroup_register_gender"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="30dip"
                android:orientation="horizontal"
                android:background="@color/colorTextWhite"
                android:paddingLeft="25dip">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/rb_register_man"
                    android:id="@+id/radioButton_register_man"
                    android:paddingLeft="20dip"
                    android:button="@drawable/rb_register_gender"
                  />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/rb_register_woman"
                    android:id="@+id/radioButton_register_woman"
                    android:paddingLeft="20dip"
                    android:layout_marginLeft="40dip"
                    android:button="@drawable/rb_register_gender"
                    />
            </RadioGroup>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/colorLine" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorTextWhite">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/tv_register_name"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dip"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/et_register_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="@string/et_register_name_hint"
                    android:inputType="textPersonName"
                    android:paddingLeft="25dip"
                    android:textSize="18sp" >
                </EditText>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/colorLine" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorTextWhite">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/tv_register_ID"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dip"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/et_register_ID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="@string/et_register_ID_hint"
                    android:inputType="textPersonName"
                    android:paddingLeft="25dip"
                    android:textSize="18sp" >
                </EditText>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/colorLine" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorTextWhite">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/tv_register_address"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dip"
                    android:textSize="18sp"/>
                <EditText
                    android:id="@+id/et_register_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="@string/et_register_address_hint"
                    android:inputType="textPersonName"
                    android:paddingLeft="25dip"
                    android:textSize="18sp" >
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginTop="15dip"
                android:orientation="horizontal"
                android:background="@color/colorTextWhite">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_login_areaCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:text="@string/tv_login_areaCode"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_login_areaCode"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:src="@mipmap/ic_down_black"
                        android:scaleType="center"
                        android:layout_marginLeft="8dip"
                        android:contentDescription="@string/app_name"/>

                    <View
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dip"
                        android:layout_marginTop="14dip"
                        android:layout_marginLeft="8dip"
                        android:background="@color/colorCodeLine"
                        />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_register_phone"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null"
                    android:inputType="phone"
                    android:paddingLeft="15dip"
                    android:hint="@string/tv_login_phone_hint">
                </EditText>
                <TextView
                    android:id="@+id/tv_register_verification_get"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:text="@string/tv_register_verification_obtain"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="13sp"
                    android:layout_margin="15dp"
                    android:background="@drawable/bt_login_click"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorTextWhite">

                <TextView
                    android:id="@+id/tv_register_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="25dip"
                    android:text="@string/tv_register_verification"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/et_register_verification"
                    android:layout_width="0dip"
                    android:layout_weight="1.0"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tv_register_verification"
                    android:hint="@string/tv_register_verification_hint"
                    android:background="@null"
                    android:inputType="phone"
                    android:paddingLeft="25dip">

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:background="@color/colorTextWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:paddingLeft="25dip"
                    android:text="@string/tv_register_password"/>

                <EditText
                    android:id="@+id/et_register_password"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:paddingLeft="25dip"
                    android:hint="@string/tv_register_password_hint"
                    android:background="@null"
                    android:inputType="textPassword"/>
                <ImageView
                    android:id="@+id/iv_register_password"
                    android:layout_width="60dip"
                    android:padding="15dip"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_close_eyes"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/bt_register_submit"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="50dip"
                android:layout_marginBottom="20dip"
                android:background="@drawable/bt_login_click"
                android:text="@string/bt_register_submit"
                android:textColor="@color/colorTextWhite"
                android:textSize="22sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>