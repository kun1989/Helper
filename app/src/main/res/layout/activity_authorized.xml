<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="17dp"
            android:text="@string/tv_authorized_title"
            android:textColor="@color/colorTextWhite"
            android:background="@color/colorTheme"/>

        <RelativeLayout
            android:id="@+id/rl_authorized_back"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_back_white_left" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/colorTextWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:paddingLeft="25dip"
            android:text="@string/tv_authorized_city"/>

        <TextView
            android:id="@+id/tv_authorized_city"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="10dip"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="25dip"
            android:textSize="14dp"
            android:hint="@string/tv_authorized_city_hint"
            />
        <ImageView
            android:id="@+id/iv_authorized_city"
            android:layout_width="60dip"
            android:padding="15dip"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_arrow_right"
            android:scaleType="center"
            />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/colorLine" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainBackground"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorTextWhite"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/tv_authorized_name"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dip"
                    android:textSize="15dp"/>
                <EditText
                    android:id="@+id/et_authorized_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="@string/et_authorized_name_hint"
                    android:inputType="textPersonName"
                    android:paddingLeft="25dip"
                    android:textSize="14dp" >
                </EditText>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/colorLine" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorTextWhite"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/tv_authorized_ID"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dip"
                    android:textSize="15dp"/>
                <EditText
                    android:id="@+id/et_authorized_ID"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="@string/et_authorized_ID_hint"
                    android:inputType="numberDecimal"
                    android:paddingLeft="25dip"
                    android:textSize="14dp" >
                </EditText>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/colorLine" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorTextWhite"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/tv_authorized_emergency_contact_person_name"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dip"
                    android:textSize="15dp"/>
                <EditText
                    android:id="@+id/et_authorized_emergency_contact_person_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="@string/et_authorized_emergency_contact_person_name_hint"
                    android:inputType="textPersonName"
                    android:paddingLeft="25dip"
                    android:textSize="14dp" >
                </EditText>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorTextWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dip"
                    android:text="@string/tv_authorized_emergency_contact_person_phone"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/et_authorized_emergency_contact_person_phone"
                    android:layout_width="0dip"
                    android:layout_weight="1.0"
                    android:layout_height="match_parent"
                    android:hint="@string/et_authorized_emergency_contact_person_phone_hint"
                    android:background="@null"
                    android:inputType="phone"
                    android:paddingLeft="25dip"
                    android:textSize="14dp">
                </EditText>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_authorized_note"
                android:paddingTop="5dp"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:layout_marginTop="10dip"
                android:background="@color/colorTextWhite"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dip"
                android:orientation="horizontal"
                android:paddingTop="5dip"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:background="@color/colorTextWhite">
                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:src="@mipmap/ic_handheld_id_card"
                    android:layout_marginRight="5dip"/>
                <ImageView
                    android:id="@+id/iv_authorized_handheld_ID_card"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="5dip"
                    android:src="@mipmap/ic_authorized_photo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dip"
                android:orientation="horizontal"
                android:paddingTop="5dip"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:background="@color/colorTextWhite">
                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:layout_marginRight="5dip"
                    android:src="@mipmap/ic_id_card"/>
                <ImageView
                    android:id="@+id/iv_authorized_ID_card"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="5dip"
                    android:src="@mipmap/ic_authorized_photo"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dip"
                android:orientation="horizontal"
                android:layout_marginTop="10dip"
                android:paddingTop="5dip"
                android:paddingBottom="10dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:background="@color/colorTextWhite">
                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:layout_marginRight="5dip"
                    android:src="@mipmap/ic_driving_license"/>
                <ImageView
                    android:id="@+id/iv_authorized_driving_license"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="5dip"
                    android:src="@mipmap/ic_authorized_photo"/>

            </LinearLayout>

            <Button
                android:id="@+id/bt_authorized_next"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="50dip"
                android:layout_marginBottom="20dip"
                android:background="@drawable/bt_login_click"
                android:text="@string/bt_authorized_next"
                android:textColor="@color/colorTextWhite"
                android:textSize="16dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>